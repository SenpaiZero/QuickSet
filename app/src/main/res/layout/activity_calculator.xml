<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <RelativeLayout
        android:id="@+id/asd"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:background="#2b2b2b">

        <Button
            android:id="@+id/blank"
            android:textColor="#E9F1CED3"
            android:gravity="center"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:textSize="30sp"
            android:text="b"
            android:foreground="?android:attr/selectableItemBackground"
            android:visibility="invisible"
            android:layout_alignParentBottom="true"/>

        <Button
            android:background="@android:color/transparent"
            android:id="@+id/button2"
            android:layout_width="105dp"
            android:layout_height="100dp"
            android:textColor="#E9F1CED3"
            android:gravity="center"
            android:textSize="30sp"
            android:text="@string/b0"
            android:layout_toRightOf="@+id/blank"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_alignParentBottom="true"/>

        <Button
            android:background="@android:color/transparent"
            android:id="@+id/button4"
            android:layout_width="105dp"
            android:layout_height="100dp"
            android:textSize="30sp"
            android:textColor="@android:color/holo_orange_dark"
            android:gravity="center"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="="
            android:layout_toRightOf="@+id/button2"
            android:layout_alignParentBottom="true"/>
        <Button
            android:background="@android:color/transparent"
            android:id="@+id/button5"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:textSize="30sp"
            android:textColor="#E9F1CED3"
            android:gravity="center"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="1"
            android:layout_above="@+id/blank"
            />
        <Button
            android:background="@android:color/transparent"
            android:id="@+id/button6"
            android:layout_width="105dp"
            android:layout_height="100dp"
            android:textSize="30sp"
            android:foreground="?android:attr/selectableItemBackground"
            android:textColor="#E9F1CED3"
            android:gravity="center"
            android:text="2"
            android:layout_toRightOf="@+id/button5"
            android:layout_above="@+id/blank"
            />
        <Button
            android:id="@+id/button7"
            android:background="@android:color/transparent"
            android:layout_width="105dp"
            android:layout_height="100dp"
            android:textSize="30sp"
            android:textColor="#E9F1CED3"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:text="3"
            android:layout_toRightOf="@+id/button6"
            android:layout_above="@+id/blank"/>

        <Button
            android:id="@+id/button9"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@android:color/transparent"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:textSize="30sp"
            android:text="4"
            android:textColor="#E9F1CED3"
            android:gravity="center"
            android:layout_above="@+id/button5"/>
        <Button
            android:id="@+id/button10"
            android:background="@android:color/transparent"
            android:layout_width="105dp"
            android:layout_height="100dp"
            android:textSize="30sp"
            android:text="5"
            android:textColor="#E9F1CED3"
            android:gravity="center"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_toRightOf="@+id/button9"
            android:layout_above="@+id/button6"/>

        <Button
            android:id="@+id/button11"
            android:background="@android:color/transparent"
            android:layout_width="105dp"
            android:layout_height="100dp"
            android:textSize="30sp"
            android:text="6"
            android:textColor="#E9F1CED3"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:layout_toRightOf="@+id/button10"
            android:layout_above="@+id/button7"/>

        <Button
            android:id="@+id/button13"
            android:background="@android:color/transparent"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:textSize="30sp"
            android:text="7"
            android:textColor="#E9F1CED3"
            android:gravity="center"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_above="@+id/button9"/>
        <Button
            android:id="@+id/button14"
            android:background="@android:color/transparent"
            android:layout_width="105dp"
            android:layout_height="100dp"
            android:textSize="30sp"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="8"
            android:textColor="#E9F1CED3"
            android:gravity="center"
            android:layout_toRightOf="@+id/button13"
            android:layout_above="@+id/button10"/>

        <Button
            android:id="@+id/button15"
            android:background="@android:color/transparent"
            android:layout_width="105dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_height="100dp"
            android:textSize="30sp"
            android:text="9"
            android:textColor="#E9F1CED3"
            android:gravity="center"
            android:layout_toRightOf="@+id/button14"
            android:layout_above="@+id/button11"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:layout_toRightOf="@+id/asd"
        android:background="#474747">



        <!--
        PLUS, MINUS, TIMES, DIVISION, DELETE
        -->
        <Button
            android:id="@+id/button8"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@android:color/transparent"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:textSize="30sp"
            android:text="@string/bp"
            android:layout_marginBottom="13dp"
            android:textColor="@android:color/holo_orange_dark"
            android:gravity="center"
            android:layout_alignParentBottom="true"/>

        <Button
            android:id="@+id/button12"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@android:color/transparent"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:textSize="40sp"
            android:textColor="@android:color/holo_orange_dark"
            android:gravity="center"
            android:text="@string/bm"
            android:layout_above="@+id/button8"/>
        <Button
            android:id="@+id/button16"
            android:background="@android:color/transparent"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:textSize="30sp"
            android:textColor="@android:color/holo_orange_dark"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:text="x"
            android:textAllCaps="false"
            android:layout_above="@+id/button12"/>
        <Button
            android:id="@+id/button18"
            android:background="@android:color/transparent"
            android:layout_width="100dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_height="75dp"
            android:textSize="30sp"
            android:textColor="@android:color/holo_orange_dark"
            android:gravity="center"
            android:text="@string/bd"
            android:layout_above="@+id/button16"/>

        <Button
            android:id="@+id/button116"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:textSize="30sp"
            android:background="@android:color/transparent"
            android:textColor="@android:color/holo_orange_dark"
            android:gravity="center"
            android:text="DEL"
            android:layout_above="@+id/button18"
            android:clickable="true"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/result"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:textSize="40sp"
        android:text=" "
        android:gravity="right"
        android:layout_above="@id/asd"/>

    <TextView
        android:id="@+id/info"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:text=" "
        android:gravity="right"
        android:layout_above="@+id/result"/>
</RelativeLayout>